<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/konten">

    <TextView
        android:id="@+id/idNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID NOTA: "
        android:textSize="35sp"
        android:fontFamily="@font/archivoblack_regular"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/namaPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pesanan: "
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah: "
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/totalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bayar: "
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali: "
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/downloadNotaButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DOWNLOAD NOTA"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#40A2D8"/>

        <Button
            android:id="@+id/pesanLagiButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PESAN LAGI"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#40A2D8"/>
    </LinearLayout>
</LinearLayout>
